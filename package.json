{
  "name": "react-sample-3",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "isomorphic-fetch": "^2.2.1",
    "postcss-scss": "^1.0.5",
    "precss": "^3.1.2",
    "prop-types": "^15.6.0",
    "react": "^16.3.2",
    "react-dom": "^16.3.2",
    "react-redux": "^5.0.6",
    "react-router-dom": "^4.2.2",
    "react-scripts": "1.1.4",
    "redux": "^3.7.2",
    "redux-actions": "^2.2.1",
    "redux-saga": "^0.16.0",
    "reselect": "^3.0.1",
    "sanitize-html": "^1.18.2"
  },
  "devDependencies": {
    "babel-preset-env": "^1.6.0",
    "enzyme": "^3.1.0",
    "enzyme-adapter-react-16": "^1.0.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-compat": "^2.2.0",
    "fetch-mock": "^6.3.0",
    "react-test-renderer": "^16.0.0",
    "redux-logger": "^3.0.6",
    "redux-mock-store": "^1.3.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "lint": "eslint src package.json --ext .js,.jsx"
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "browsers": [
              "last 2 versions",
              "safari >= 7"
            ],
            "node": "current"
          }
        }
      ],
      "react-app"
    ],
    "plugins": [
      "syntax-class-properties",
      "transform-class-properties",
      "transform-object-rest-spread"
    ]
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "airbnb"
    ],
    "plugins": [
      "compat"
    ],
    "rules": {
      "semi": [
        2,
        "never"
      ],
      "no-unexpected-multiline": 2,
      "jsx-a11y/href-no-hash": "off",
      "jsx-a11y/anchor-is-valid": [
        "warn",
        {
          "aspects": [
            "invalidHref"
          ]
        }
      ],
      "no-tabs": 0,
      "no-mixed-spaces-and-tabs": 0,
      "no-underscore-dangle": 0,
      "no-undef": 0,
      "no-confusing-arrow": [
        "error",
        {
          "allowParens": true
        }
      ],
      "react/forbid-prop-types": 0,
      "react/jsx-closing-tag-location": 0
    },
    "env": {
      "browser": true,
      "jest": true
    },
    "settings": {
      "polyfills": [
        "fetch"
      ]
    }
  },
  "eslintIgnore": [
    "src/registerServiceWorker.js",
    "package.json"
  ],
  "license": "MIT",
  "homepage": "https://alexlitel.github.io/react-newsfeed/"
}
